#include <iostream>
using namespace std;
int main() {
	int num;
    int d;
    int sum = 0;
    cout <<"Enter a number :";
    cin >>num;
    while (num > 0) {
    	d = num % 10;
    	sum += d;
        num = num/10;
    }
    cout <<" The sum of the digits in the number you've entered " << sum <<endl;
    return 0;
}
